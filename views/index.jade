      const selectedValueEl = option.closest('.wrapper').querySelector('.select-value');
      selectedValueEl.textContent = option.textContent;
      selectedValueEl.dataset.value = option.dataset.value;
    }

    const filterOptions = (options, q) => {
      const regex = new RegExp(`^${q}`, 'i');
      return options.filter(opt => !!opt.name.match(regex))
    };

    // Handle clicks with event delegation
    document.body.addEventListener('click', evt => {
      const clicked = evt.target;
      const selectWrappers = document.querySelectorAll('#form .wrapper');

      // On selection button click
      const selectionBtn = clicked.closest('.select-btn');
      if (selectionBtn) {
        const selectWrapper = selectionBtn.closest('.wrapper');
        const input = selectWrapper.querySelector('.search input');
        selectWrapper.classList.toggle('active');
        input.focus();
      }

      // On option click
      const option = clicked.closest('.option');
      if (option) {
        console.log('before update');
        updateSelection(option);
        selectWrappers.forEach(wrapper => wrapper.classList.remove('active'));
      }

      // On outside form click
      const formElement = clicked.closest('.form');
      if (!formElement) {
        selectWrappers.forEach(wrapper => wrapper.classList.remove('active'));
      }
    });

    // handle input with event delegation
    document.body.addEventListener('input', evt => {
      // Elements
      const pressed = evt.target;
      const selectWrapper = pressed.closest('form .wrapper');
      if (!selectWrapper) return;
      const selectBtn = selectWrapper.querySelector('.select-btn');
      const optionsEl = selectWrapper.querySelector('.options');
      const selectedValue = selectWrapper.querySelector('.select-value').textContent;

      // assign options dynamically
      const optionsArray = selectBtn.id === 'languageSelect' ? languagesArray : selectBtn.id === 'modelSelect' ? modelsArray : [];

      // filter options
      const filteredOptions = filterOptions(optionsArray, pressed.value);

      // render filtered options
      optionsEl.innerHTML = `
        ${selectBtn.id === 'languageSelect' ? `<li class='option ${selectedValue === 'Auto-Detect' ? 'selected' : ''}' data-value='auto-detect'>Auto-Detect</li>` : ''}

        ${filteredOptions.map(opt => `
          <li class='option ${selectedValue === opt.name ? 'selected' : ''}' data-value=${opt.value}>${opt.name}</li>
        `).join('')}
      `;
    });

    // handle key press with event delegation
    document.body.addEventListener('keydown', evt => {
      const pressed = evt.target;
      const key = evt.key;
      const formContent = pressed.closest('form .content');
      if (!formContent) return;
      (key === 'ArrowDown' || key === 'ArrowUp' || key === 'Enter') && evt.preventDefault();
      const focusedOption = document.activeElement.closest('.option');

      if (key === 'ArrowDown') {
        // if there is a current focused option, focus the next one, else focus the first one
        // optional chaining is used to prevent error on going past the last element
        focusedOption ? focusedOption.nextSibling?.focus()
        : formContent.querySelector('.option').focus();
      } else if (key === 'ArrowUp') {
        // optional chaining is used to prevent error on going past the first element
        focusedOption.previousSibling?.focus();
      } else if (key === 'Enter') {
        focusedOption?.click();
      }
    });


    form.addEventListener("submit", submitForm);

