style.
  form {
    padding: 30px;
    display: flex;
    flex-direction: column;
    gap: 1em;
    background-color: white;
    font-size: 0.9rem;
  }

  form :where(input:not([type='checkbox']), .select-btn) {
    padding: 0.5em 1em;
    width: 100%;
    border: 1px solid #ccc;
    font-size: inherit;
  }

  form .group {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  form .group .wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
    position: relative;
    width: 100%;
  }

  .select-btn, li{
    width: 100%;
    padding: 10px 16px;
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .select-btn {
    background: transparent;
    justify-content: space-between;
  }

  .select-btn i {
    font-size: 1.5rem;
    transition: transform 250ms ease-in-out;
  }

  .wrapper.active .select-btn i {
    transform: rotate(-180deg);
  }

  .content {
    position: absolute;
    z-index: 1;
    width: 100%;
    display: none;
    flex-direction: column;
    visibility: hidden;
    opacity: 0;
    max-height: 0;
    padding: 16px;
    padding-bottom: 0;
    margin-block: 3.5em;
    background: #fff;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    transition: max-height 250ms ease-in-out;
  }

  .wrapper.active .content{
    display: flex;
    visibility: visible;
    opacity: 1;
    max-height: 350px;
  }

  .content .search {
    position: relative;
    display: flex;
    align-items: center;
    height: 2.5rem;
    gap: 0.5em;
  }

  .search i {
    color: #999;
    font-size: 1.25rem;
    pointer-events: none;
  }

  .search input {
    flex-grow: 1;
    outline: none;
    font-size: 1rem;
    padding: 0.5em 0.75em;
    border: 1px solid #B3B3B3;
  }

  .search input:focus{
    border: 2px solid #4285f4;
  }

  .search input::placeholder{
    color: #bfbfbf;
  }

  .search input::-webkit-search-cancel-button {
    cursor: pointer;
    font-size: 1.25em;
  }

  .content .options {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
    margin-top: 10px;
    overflow-y: auto;
    padding-inline: 0.5em;
    background-color: #fff;
  }

  .options::-webkit-scrollbar{
    width: 7px;
  }

  .options::-webkit-scrollbar-track{
    background: #f1f1f1;
    border-radius: 1rem;
  }

  .options::-webkit-scrollbar-thumb{
    background: #ccc;
    border-radius: 1rem;
  }

  .options::-webkit-scrollbar-thumb:hover {
    background: #b3b3b3;
  }

  .options * {
    cursor: pointer;
  }

  .options .option {
    margin: 0;
    font-size: 1rem;
    display: flex;
    gap: 0.5em;
  }

  .options .option.hidden {
    display: none;
  }

  .options .option:where(:hover, :focus, .selected) {
    border-radius: 5px;
    background: hsl(0deg 0% 90%);
  }

  .options .option:focus {
    outline: 0;
    box-shadow: 0 0 3px #4285f4;
  }

  #languageLabel, #modelLabel, #translateLabel, #translate {
    cursor: pointer;
  }

  .group.translateHolder {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5em;
    align-items: center;
  }

  .group.translateHolder input[type='checkbox'] {
    position: relative;
    height: 1.1rem;
    width: 1.1rem;
    opacity: 0.8;
  }

  .translateHolder .group > * {
    margin: 0;
  }
  
  .group ul.selected-langs {
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;
  }

  .selected-langs .selected-lang {
    width: fit-content;
    padding: 0.4em 0.6em;
    display: flex;
    gap: 0.5em;
    font-size: 1rem;
  }

  .selected-langs .selected-lang p {
    margin: 0;
  }

  .selected-langs .selected-lang i {
    font-size: 1.125rem;
  }

  .selected-langs .selected-lang:hover i {
    color: #961515;
  }

  .translateHolder .wrapper {
    grid-column: 1 / -1;
    visibility: hidden;
    opacity: 0;
    max-height: 0;
    transition: all 250ms ease-in-out;
  }

  .translateHolder > input[type='checkbox']:checked + .wrapper {
    visibility: visible;
    opacity: 1;
    max-height: fit-content;
  }

  .submit-btn {
    width: 100%;
    border: none;
    background: rgb(60, 57, 57);
    font-size: 18px;
    color: white;
    border-radius: 3px;
    padding: 20px;
    text-align: center;
    cursor: pointer;
  }
